---
import { info } from "@data";

import Layout from "@layouts/Layout.astro";
import Hero from "@components/home/Hero.astro";
import Experience from "@components/home/Experience.astro";
import ProjectsWrapper from "@components/general/ProjectsWrapper.astro";
import MetaHead from "@components/general/MetaHead.astro";

const featureProjects = info.projects.reduce((accumulator, project) => {
  if (accumulator.length < 6 && project.isFeatured) {
    accumulator.push(project);
  }
  return accumulator;
}, []);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <MetaHead
      title={"Portfolio"}
      description={info.about}
      ogImageUrl={"/assets/images/profile.png"}
    />
  </head>

  <body>
    <Layout>
      <Hero name={info.name} about={info.about} />
      <!-- New section for priorities -->
      <p class="w-[15rem] dark:text-light mt-16">{info.last_updated}<br></br></p>
      <h2 class="w-[15rem] dark:text-light mt-16">Priorities</h2>
      <div class="flex">
          <div class="w-[15rem] dark:text-light mt-16 mx-4">
              <p class="column">Becoming a Software Engineer. The main priority is to get a 6-month internship as a Software Engineer. Working on Projects to expand knowledge in Computer Vision & Machine Learning.</p>
          </div>
          <div class="w-[15rem] dark:text-light mt-16 mx-4">
              <p class="column">Becoming an Investor. Build my Portfolio and backtesting different strategies. Expand financial knowledge.</p>
          </div>
          <div class="w-[15rem] dark:text-light mt-16 mx-4">
              <p class="column">Becoming an Athlete. 80 push-ups. 20 pull-ups. Running a half marathon.</p>
          </div>
      </div>
      <Experience title={"EXPERIENCE"} details={info.experience} />
      <Experience title={"EDUCATION"} details={info.education} />
      <section>
        <h2 class="w-[15rem] dark:text-light mt-16">PROJECTS</h2>
        <ProjectsWrapper projects={featureProjects} />
      </section>
    </Layout>
  </body>
</html>
